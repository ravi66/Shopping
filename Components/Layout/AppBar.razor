<MudAppBar Dense="true" >
    @if (BackPage)
    {
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Href="/" Color="Color.Inherit" />
    }
    else
    {
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Class="invisible" />
    }
    <MudSpacer />
    <MudText Typo="Typo.h6" >@CentreText</MudText>
    <MudSpacer />
    @if (ShowAisles)
    {
        <MudIconButton Icon="@Icons.Material.Filled.LocalGroceryStore" Href="/aisles" Color="Color.Inherit" />
    }
    else
    {
        <MudIconButton Icon="@Icons.Material.Filled.LocalGroceryStore" Class="invisible" />
    }
</MudAppBar>

@code
{
    [Parameter] public string CentreText { get; set; } = string.Empty;

    [Parameter] public bool ShowAisles { get; set; } = false;

    [Parameter] public bool BackPage { get; set; } = false;
}